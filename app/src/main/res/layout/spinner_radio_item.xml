<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="10dp">

    <CheckBox
        android:id="@+id/checkSpinner"
        style="@style/CustomCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:button="@drawable/abc_btn_check_material"
        android:buttonTint="@color/colorAccent" />


    <TextView
        android:id="@+id/txtDescTrans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/btnDetalleTrans"
        android:layout_toRightOf="@id/checkSpinner"
        android:singleLine="true"
        android:text="Tipo de transporte asjhas fajsf awjfaehf aefaf ajfdha " />

    <ImageView
        android:id="@id/btnDetalleTrans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_directions_car_black_24dp" />

</RelativeLayout>