<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/headerDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.acarreos.creative.CustomViews.RobotoTextView
            android:id="@+id/headerNuevoEnvio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Oferta"
            android:textColor="@color/colorAccent"
            android:textSize="25dp" />

        <View
            android:id="@+id/separador"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/headerNuevoEnvio"
            android:layout_marginBottom="16dp"
            android:background="@color/gray_box" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/footerNuevoEnvio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <com.acarreos.creative.CustomViews.RobotoTextView
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="@string/cancelar"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />

        <com.acarreos.creative.CustomViews.RobotoTextView
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guardar"
            android:textColor="@color/primary_color"
            android:textSize="15sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headerDialog"
        android:layout_above="@+id/footerNuevoEnvio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_today_black_24dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilPrecio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/textPrecio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/apptheme_edit_text_holo_light"
                            android:hint="@string/precio"
                            android:inputType="numberDecimal"
                            android:textColor="@color/black" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_today_black_24dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilComisision"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/textComision"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/apptheme_edit_text_holo_light"
                            android:editable="false"
                            android:hint="Comision a pagar"
                            android:inputType="none"
                            android:textColor="@color/black" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_today_black_24dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilFecSalida"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/textFecSalida"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/apptheme_edit_text_holo_light"
                            android:editable="false"
                            android:hint="@string/dia_recogida"
                            android:textColor="@color/black" />

                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:id="@+id/btnCalLlegada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_expand_more_black_24dp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_today_black_24dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilHoraSalida"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/textHoraSalida"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/apptheme_edit_text_holo_light"
                            android:editable="false"
                            android:hint="@string/hora_recogida"
                            android:textColor="@color/black" />

                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:id="@+id/btnTimeLlegada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_expand_more_black_24dp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_today_black_24dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilFecLlegada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/textFecLlegada"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/apptheme_edit_text_holo_light"
                            android:editable="false"
                            android:hint="@string/dia_entrega"
                            android:textColor="@color/black" />

                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:id="@+id/btnCalSalida"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_expand_more_black_24dp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_today_black_24dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilHoraLlegada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/textHoraLlegada"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/apptheme_edit_text_holo_light"
                            android:editable="false"
                            android:hint="@string/hora_entrega"
                            android:textColor="@color/black" />

                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:id="@+id/btnTimeSalida"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_expand_more_black_24dp" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</RelativeLayout>